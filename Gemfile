source "http://rubygems.org/"

# lightweight ruby-based web library
gem 'sinatra'
# methods for encoding json
gem 'sinatra-contrib'
# database
gem 'sqlite3'
# ORM
gem 'sinatra-activerecord'

group :test do
  # testing
  gem 'rspec'
  # web-specific test methods
  gem 'rack-test'
end

group :development do
  # debugging
  gem 'pry'
end
